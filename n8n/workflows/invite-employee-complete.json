    {
      "parameters": {
        "jsCode": "// Validate input\nconst payload = $input.item.json;\n\nif (!payload.email || !payload.role || !payload.companyId) {\n  throw new Error('Missing required fields: email, role, companyId');\n}\n\nif (!['admin', 'dispatcher', 'worker'].includes(payload.role)) {\n  throw new Error('Invalid role');\n}\n\nreturn {\n  email: payload.email.trim().toLowerCase(),\n  role: payload.role,\n  companyId: payload.companyId,\n  companyName: payload.companyName || 'the company'\n};"
      },
      "id": "validate",
      "name": "Validate Input",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [450, 400]
    },
    {
      "parameters": {
        "authentication": "predefinedCredentialType",
        "nodeCredentialType": "supabaseApi",
        "operation": "createUser",
        "email": "={{ $json.email }}",
        "userMetadata": "={{ JSON.stringify({ company_id: $json.companyId, role: $json.role }) }}",
        "options": {
