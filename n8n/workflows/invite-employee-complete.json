      "parameters": {
        "jsCode": "// Extract magic link from Supabase response\nconst response = $input.item.json;\nconst magicLink = response.properties?.action_link || response.properties?.hashed_token;\n\nif (!magicLink) {\n  throw new Error('Failed to generate magic link');\n}\n\nreturn {\n  email: $json.email,\n  magicLink: magicLink,\n  role: $json.role,\n  companyName: $json.companyName\n};"
      },
